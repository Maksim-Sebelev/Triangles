module;

//----------------------------------------------------------------------------------------------------------------------------

#include <GLFW/glfw3.h>

//----------------------------------------------------------------------------------------------------------------------------

export module key_parser;

//----------------------------------------------------------------------------------------------------------------------------

export import window;

//----------------------------------------------------------------------------------------------------------------------------

export namespace OctreeViz
{

//----------------------------------------------------------------------------------------------------------------------------

class KeyParser
{
    private:
        Window window_;
    
    public:
        KeyParser(const Window& window);

        bool is_key_pressed(int key) const; /* GLFW_KEY_* */
};

//----------------------------------------------------------------------------------------------------------------------------

KeyParser::KeyParser(const Window& window) :
window_(window.get())
{}

//----------------------------------------------------------------------------------------------------------------------------

bool
KeyParser::is_key_pressed(int key) const
{
    return glfwGetKey(window_.get(), key) == GLFW_PRESS;
}

//----------------------------------------------------------------------------------------------------------------------------

} /* namespace OctreeViz */

